<% layout("/layouts/boilerplate") %>

<style>
  #filters {
    display: flex !important;
    align-items: center !important;
    flex-wrap: wrap !important;
  }

  .filter-container {
    display: flex !important;
    justify-content: space-around !important;
  }

  .filter-box {
    text-align: center;
    margin-right: 1.7rem;
    opacity: 0.7;
    transition: 0.3s;
  }

  .filter-box button {
    border: none;
    outline: none;
    font-size: 12px;
    background-color: transparent;
    white-space: nowrap;
  }

  .filter-box i {
    font-size: 24px !important;
  }

  .filter-box:hover {
    opacity: 1;
    cursor: pointer;
  }

  .tax-info {
    display: none;
  }

  .tax-toggle {
    color: black;
    border: 1px solid black;
    height: 42px;
    padding: 7px;
    border-radius: 13px;
  }

  #flexSwitchCheckDefault {
    color: black;
    border: 1px solid black;
  }
</style>

<div id="filters" class="mt-4">
  <div class="filter-container">
    <div class="filter-box">
      <form action="/listings/category" method="post">
        <div>
          <button name="btnValue" value="Trending">
            <i class="fa-solid fa-fire-flame-curved"></i>
          </button>
        </div>
        <button name="btnValue" value="Trending">Trending</button>
      </form>
    </div>

    <div class="filter-box">
      <form action="/listings/category" method="post">
        <div>
          <button name="btnValue" value="Amazing Pools">
            <i class="fa-solid fa-water-ladder"></i>
          </button>
        </div>
        <button name="btnValue" value="Amazing Pool">Amazing Pools</button>
      </form>
    </div>

    <div class="filter-box">
      <form action="/listings/category" method="post">
        <div>
          <button name="btnValue" value="Rooms">
            <i class="fa-solid fa-bed"></i>
          </button>
        </div>
        <button name="btnValue" value="Rooms">Rooms</button>
      </form>
    </div>

    <div class="filter-box">
      <form action="/listings/category" method="post">
        <div>
          <button name="btnValue" value="Iconic Cites">
            <i class="fa-solid fa-city"></i>
          </button>
        </div>
        <button name="btnValue" value="Iconic Cites">Iconic Cities</button>
      </form>
    </div>

    <div class="filter-box">
      <form action="/listings/category" method="post">
        <div>
          <button name="btnValue" value="Beachfront">
            <i class="fa-solid fa-umbrella-beach"></i>
          </button>
        </div>
        <button name="btnValue" value="Beachfront">Beachfront</button>
      </form>
    </div>

    <div class="filter-box">
      <form action="/listings/category" method="post">
        <div>
          <button name="btnValue" value="Farms">
            <i class="fa-solid fa-cow"></i>
          </button>
        </div>
        <button name="btnValue" value="Farms">Farms</button>
      </form>
    </div>

    <div class="filter-box">
      <form action="/listings/category" method="post">
        <div>
          <button name="btnValue" value="Mountains">
            <i class="fa-solid fa-mountain"></i>
          </button>
        </div>
        <button name="btnValue" value="Mountains">Mountains</button>
      </form>
    </div>

    <div class="filter-box">
      <form action="/listings/category" method="post">
        <div>
          <button name="btnValue" value="Castles">
            <i class="fa-brands fa-fort-awesome"></i>
          </button>
        </div>
        <button name="btnValue" value="Castles">Castles</button>
      </form>
    </div>

    <div class="filter-box">
      <form action="/listings/category" method="post">
        <div>
          <button name="btnValue" value="Arctic">
            <i class="fa-solid fa-person-skiing"></i>
          </button>
        </div>
        <button name="btnValue" value="Arctic">Arctic</button>
      </form>
    </div>

    <div class="filter-box">
      <form action="/listings/category" method="post">
        <div>
          <button name="btnValue" value="Camping">
            <i class="fa-solid fa-campground"></i>
          </button>
        </div>
        <button name="btnValue" value="Camping">Camping</button>
      </form>
    </div>

    <div class="tex-toggle">
      <div class="form-check-reverse form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="flexSwitchCheckDefault"
        />
        <label class="form-check-label" for="flexSwitchCheckDefault"
          >Diaplay total before tax</label
        >
      </div>
    </div>
  </div>
</div>

<h3 class="mt-3">Results for <%= btnValue %></h3>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% if(!allListings.length) { %>
  <p>No listings find for <%= btnValue %></p>
  <% } %> <% for (listing of allListings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b> <br />
          &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
          <i class="tax-info">&nbsp;&nbsp; +18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>

<script>
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (info of taxInfo) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
