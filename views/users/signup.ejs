<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <h1 class="col-6 offset-3">Signup on Wanderlust</h1>
  <div class="col-6 offset-3">
    <form action="/signup" method="POST" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          placeholder="please enter a username"
          required
        />
        <div class="valid-feedback">
          Username must contain a number or special case letters
        </div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          class="form-control"
          placeholder="please enter valid emailId"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          placeholder="please enter password"
          required
        />
        <div class="valid-feedback">
          Password must contain a number or special case letters
        </div>
      </div>
      <button class="btn btn-success">Signup</button>
    </form>
  </div>
</div>
